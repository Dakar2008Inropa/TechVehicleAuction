<UserControl x:Class="TechAuction.Views.AuctionView"
 xmlns="https://github.com/avaloniaui"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:ui="using:FluentAvalonia.UI.Controls"
 xmlns:vm="using:TechAuction.ViewModels"
 d:DesignHeight="450"
 d:DesignWidth="600"
 x:DataType="vm:AuctionViewModel"
 mc:Ignorable="d">

    <Design.DataContext>
        <vm:AuctionViewModel />
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="* *">

        <StackPanel Grid.Row="0" Spacing="10">

            <TextBlock Text="Your Auctions" />

            <DataGrid IsReadOnly="True" ItemsSource="{Binding Vehicles}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"
                     Binding="{Binding Maker}"
                     Header="Maker" />
                    <DataGridTextColumn Width="*"
                     Binding="{Binding Model}"
                     Header="Model" />
                    <DataGridTextColumn Binding="{Binding ModelYear}" Header="Year" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="10">

            <TextBlock Text="Current Auctions" />

        </StackPanel>

    </Grid>

</UserControl>